
@using TaskClassWork.Data;

<div class="container" style="margin-top: 40px">
   

    <div class="col-lg-6 col-md-offset-3 well-lg">
        <button class="btn btn-success" id="addCategory">Add Category</button>
        <br/>
        <br/>
        <table class="table table-bordered table-hover table-striped">
            <tr>
              
                <th>Category Name</th>
                <th>Edit Category</th>
            </tr>
            @foreach (Category c in Model)
            {
                <tr>

                    <td><a href="/Home/SpecificCategory?catId=@c.Id">@c.Name</a></td>
                    <td>
                        <a href="/Home/Edit?Id=@c.Id" class="btn btn-danger">Edit</a>
                    </td>

                </tr>
            }
        </table>
    </div>
</div>

<div class="modal fade category" role="dialog">
    <div class="modal-dialog">

        <form action="/home/AddCategoryForm" method="post" style="margin-top: 60px" class="well">
            <div class="modal-header">
                <div class=" modal-title"><h3>Add Category</h3></div>
            </div>
            <div class="modal-body">
                <div class=" form-group">
                    <label>Category Name</label>
                    <input type="text" placeholder="Category Name" name="Name" class="form-control" maxlength="50" id="Name" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section scripts {

    <script src="~/Scripts/Category.js"></script>
}