@using TaskClassWork.Data;
@model IEnumerable<Category>
   
    <div class="container" style="margin-top:40px">
        <div class="col-lg-4 col-md-offset-5 well">
        <form action="/Home/Add" method="post">
            <input type="text" placeholder="Title" name="Title" class="form-control" />
            <br />
            <input type="date" placeholder="Due Date" name="DueDate" class="form-control" />
            <br />
            <select name="CategoryId" class="form-control">
                    @foreach(Category c in Model)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
          </select>
            <br/>
            <br/>
            <div class="col-lg-4 col-md-offset-5">
                <button class="btn btn-danger ">ADD TO DO ITEM</button>
            </div>
        </form>
            </div>
    </div>

