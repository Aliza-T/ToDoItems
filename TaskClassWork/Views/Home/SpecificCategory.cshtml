@using TaskClassWork.Data
@model TaskClassWork.Models.ViewModel
<div class="container" style="margin-top: 40px">
    <h4>To Do Items for @Model.Name</h4>
    <table class="table table-bordered">
        <tr>
            <th>Title</th>
            <th>Due Date</th>
            <th>Completed</th>
        </tr>
        @foreach (ToDoItems t in Model.toDoItems.OrderByDescending(t=>t.DueDate))
        {
           <tr>
               <td>@t.Title</td>
            <td>@t.DueDate.ToLongDateString()</td>
                <td>
                    @if (t.IsCompleted)
                    {
                        <span style="font-size: 20px;" class="glyphicon glyphicon-ok-sign"></span>
                    }
                </td>
            </tr>
        }
    </table>
</div>


